@model IEnumerable<FinanceCentral.Models.Expenses>

@{
    ViewBag.Title = "Expenses";
}

<h2>Expenses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h3>List of Expenses</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.expenseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expenseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.incomeID)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.expenseID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expenseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.month)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.day)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.incomeID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.expenseID }) |
            @Html.ActionLink("Details", "Details", new { id = item.expenseID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.expenseID })
        </td>
    </tr>
}

</table>

<div>
    Total:
    @Model.Sum(i => i.amount)
</div>
